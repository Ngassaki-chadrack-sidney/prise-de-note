// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // ou "mysql", "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  avatar    String? // Url de la photo de profils donc rajouter une methode pour upload des fichiers
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  notes Note[]

  @@map("users")
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   Json // Contenu Editor.js au format JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notes")
}
